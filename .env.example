# Steel App Frontend Environment Configuration

# API Configuration
VITE_API_BASE_URL=http://localhost:5000/api
VITE_REFRESH_ENDPOINT=/auth/refresh-token

# For production, use:
# VITE_API_BASE_URL=https://your-api-domain.com/api

# Feature Flags
# Enable audit logs feature (set to 'true' in production)
VITE_ENABLE_AUDIT_LOGS=false

# Contract Validation (Development Only)
# Set to 'true' to enforce strict contract validation (blocks requests/responses that fail validation)
# Set to 'false' or omit to only log warnings in console
# This is development-only; contracts are never validated in production
VITE_CONTRACT_STRICT=false