/* Corona Dark Theme for Steel Invoice Pro */

:root {
  /* Primary Colors */
  --primary-bg: #121418;
  --secondary-bg: #1E2328;
  --tertiary-bg: #2E3B4E;
  --card-bg: #1E2328;
  --sidebar-bg: #1E2328;
  --navbar-bg: #1E2328;
  
  /* Text Colors */
  --text-primary: #FFFFFF;
  --text-secondary: #B0BEC5;
  --text-muted: #78909C;
  --text-light: #90A4AE;
  
  /* Accent Colors */
  --accent-primary: #008B8B;
  --accent-secondary: #263238;
  --accent-success: #388E3C;
  --accent-warning: #FFC107;
  --accent-danger: #D32F2F;
  --accent-info: #1976D2;
  
  /* Gradient Colors */
  --gradient-primary: linear-gradient(135deg, #008B8B 0%, #00695C 100%);
  --gradient-success: linear-gradient(135deg, #388E3C 0%, #2E7D32 100%);
  --gradient-warning: linear-gradient(135deg, #FFC107 0%, #F57C00 100%);
  --gradient-danger: linear-gradient(135deg, #D32F2F 0%, #B71C1C 100%);
  
  /* Border Colors */
  --border-primary: #37474F;
  --border-secondary: #455A73;
  --border-light: #546E7A;
  
  /* Shadow */
  --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.3);
  --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.4);
  --shadow-lg: 0 10px 15px rgba(0, 0, 0, 0.5);
  --shadow-xl: 0 20px 25px rgba(0, 0, 0, 0.6);
  
  /* Spacing */
  --spacing-xs: 0.25rem;
  --spacing-sm: 0.5rem;
  --spacing-md: 1rem;
  --spacing-lg: 1.5rem;
  --spacing-xl: 2rem;
  --spacing-2xl: 3rem;
  
  /* Border Radius */
  --radius-sm: 0.25rem;
  --radius-md: 0.5rem;
  --radius-lg: 0.75rem;
  --radius-xl: 1rem;
}

/* Global Reset and Base Styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* Force all input text to be visible */
input, 
input[type="text"], 
input[type="email"], 
input[type="password"],
input[type="number"],
input[type="tel"],
input[type="url"],
textarea,
select,
.MuiInputBase-input,
.MuiOutlinedInput-input,
.MuiTextField-root input,
.MuiSelect-select,
.MuiFormControl-root input,
.MuiFormControl-root select {
  color: #FFFFFF !important;
  -webkit-text-fill-color: #FFFFFF !important;
  caret-color: #008B8B !important;
  background-color: transparent !important;
  text-shadow: none !important;
  opacity: 1 !important;
  font-size: 14px !important;
}

/* Handle autocomplete background override */
input:-webkit-autofill,
input:-webkit-autofill:hover,
input:-webkit-autofill:focus,
input:-webkit-autofill:active {
  -webkit-box-shadow: 0 0 0 30px #1E2328 inset !important;
  -webkit-text-fill-color: #FFFFFF !important;
  color: #FFFFFF !important;
  background-color: transparent !important;
}

/* Additional specificity for MUI components */
.MuiOutlinedInput-root,
.MuiOutlinedInput-root.Mui-focused,
.MuiInputBase-root,
.MuiInputBase-root.Mui-focused,
.MuiFormControl-root .MuiOutlinedInput-root,
.MuiFormControl-root .MuiOutlinedInput-root.Mui-focused {
  background-color: #1E2328 !important;
}

.MuiOutlinedInput-root .MuiOutlinedInput-input,
.MuiInputBase-root .MuiInputBase-input,
.MuiSelect-select,
.MuiFormControl-root input,
.MuiFormControl-root select,
.MuiFormControl-root .MuiSelect-select {
  color: #FFFFFF !important;
  -webkit-text-fill-color: #FFFFFF !important;
  opacity: 1 !important;
  background-color: transparent !important;
}

.MuiOutlinedInput-notchedOutline,
.MuiOutlinedInput-root .MuiOutlinedInput-notchedOutline,
.MuiOutlinedInput-root.Mui-focused .MuiOutlinedInput-notchedOutline {
  background-color: transparent !important;
}

/* Force visible text on login inputs */
.login-input input,
.login-input .MuiOutlinedInput-input,
.login-input .MuiInputBase-input {
  color: #FFFFFF !important;
  -webkit-text-fill-color: #FFFFFF !important;
  opacity: 1 !important;
  background: transparent !important;
  text-shadow: 0 0 0 #FFFFFF !important;
}

.login-input .MuiOutlinedInput-root,
.login-input .MuiOutlinedInput-root.Mui-focused {
  background-color: #1E2328 !important;
}

.login-input .MuiOutlinedInput-root.Mui-focused .MuiOutlinedInput-notchedOutline {
  background-color: transparent !important;
}

html, body {
  height: 100%;
  width: 100%;
  margin: 0;
  padding: 0;
}

body {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  background-color: var(--primary-bg);
  color: var(--text-primary);
  line-height: 1.6;
  font-size: 14px;
  overflow-x: hidden;
}

#root {
  min-height: 100vh;
  width: 100%;
  background-color: var(--primary-bg);
}

/* Layout Components */
.app-container {
  display: flex;
  min-height: 100vh;
  background-color: var(--primary-bg);
}

.main-content {
  flex: 1;
  background-color: var(--primary-bg);
  min-height: 100vh;
  margin-left: 260px;
  transition: margin-left 0.3s ease;
  position: relative;
  z-index: 1;
}

@media (min-width: 1536px) {
  .main-content {
    margin-left: 280px;
  }
}

@media (max-width: 768px) {
  .main-content {
    margin-left: 0;
  }
}

.content-wrapper {
  padding: var(--spacing-lg) var(--spacing-xl);
  max-width: 100%;
}

@media (min-width: 1200px) {
  .content-wrapper {
    padding: var(--spacing-xl) var(--spacing-2xl);
    max-width: 1400px;
    margin: 0 auto;
  }
}

@media (min-width: 1536px) {
  .content-wrapper {
    padding: var(--spacing-2xl) var(--spacing-2xl);
    max-width: 1600px;
  }
}

/* Sidebar Styles */
.sidebar {
  width: 260px !important;
  background: var(--sidebar-bg) !important;
  border-right: 1px solid var(--border-primary) !important;
  position: fixed !important;
  top: 0 !important;
  left: 0 !important;
  height: 100vh !important;
  z-index: 1000 !important;
  transition: transform 0.3s ease !important;
  overflow-y: auto !important;
  display: flex !important;
  flex-direction: column !important;
  box-shadow: var(--shadow-lg) !important;
}

@media (min-width: 1536px) {
  .sidebar {
    width: 280px !important;
  }
}

.sidebar-header {
  padding: var(--spacing-lg) !important;
  border-bottom: 1px solid var(--border-primary) !important;
  background: var(--tertiary-bg) !important;
}

.sidebar-logo {
  display: flex !important;
  align-items: center !important;
  gap: var(--spacing-md) !important;
  color: var(--text-primary) !important;
  text-decoration: none !important;
  font-size: 1.25rem !important;
  font-weight: 700 !important;
}

.sidebar-logo:hover {
  color: var(--text-primary) !important;
  text-decoration: none !important;
}

.sidebar-menu {
  padding: var(--spacing-lg) 0 !important;
  flex: 1 !important;
  background: var(--sidebar-bg) !important;
}

.menu-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  padding: var(--spacing-md) var(--spacing-lg);
  color: var(--text-secondary);
  text-decoration: none;
  transition: all 0.2s ease;
  border: none;
  background: none;
  width: 100%;
  cursor: pointer;
  border-radius: 0;
  margin: 0 var(--spacing-sm);
  border-radius: var(--radius-md);
}

.menu-item:hover {
  background: rgba(0, 139, 139, 0.1);
  color: var(--text-primary);
  text-decoration: none;
}

.menu-item.active {
  background: var(--gradient-primary);
  color: var(--text-primary);
  box-shadow: var(--shadow-md);
  margin: 0 var(--spacing-sm);
}

.menu-item.active:hover {
  background: var(--gradient-primary);
  color: var(--text-primary);
}

.menu-item-icon {
  width: 20px;
  height: 20px;
  flex-shrink: 0;
}

/* Section headers in sidebar */
.sidebar-section-title {
  padding: var(--spacing-md) var(--spacing-lg);
  margin: var(--spacing-lg) 0 var(--spacing-sm) 0;
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  color: var(--text-muted);
  letter-spacing: 0.05em;
}

/* Top Navigation */
.top-navbar {
  background: var(--navbar-bg);
  border-bottom: 1px solid var(--border-primary);
  padding: var(--spacing-md) var(--spacing-xl);
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: sticky;
  top: 0;
  z-index: 1100;
}

.navbar-left {
  display: flex;
  align-items: center;
  gap: var(--spacing-lg);
}

.navbar-right {
  display: flex;
  align-items: center;
  gap: var(--spacing-lg);
}

.navbar-title {
  font-size: 1.5rem;
  font-weight: 600;
  color: var(--text-primary);
}

.user-profile {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  color: var(--text-secondary);
}

.user-avatar {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  background: var(--gradient-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: 600;
}

/* Card Styles */
.card {
  background: var(--card-bg);
  border: 1px solid var(--border-primary);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
  transition: box-shadow 0.2s ease;
}

.card:hover {
  box-shadow: var(--shadow-md);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-lg);
}

.card-title {
  font-size: 1.125rem;
  font-weight: 600;
  color: var(--text-primary);
}

.card-subtitle {
  color: var(--text-muted);
  font-size: 0.875rem;
  margin-top: var(--spacing-xs);
}

/* Button Styles */
.btn {
  display: inline-flex;
  align-items: center;
  gap: var(--spacing-sm);
  padding: var(--spacing-sm) var(--spacing-md);
  border: none;
  border-radius: var(--radius-md);
  font-weight: 500;
  font-size: 0.875rem;
  cursor: pointer;
  transition: all 0.2s ease;
  text-decoration: none;
  position: relative;
  overflow: hidden;
}

.btn-primary {
  background: var(--gradient-primary);
  color: white;
  box-shadow: var(--shadow-sm);
}

.btn-primary:hover {
  box-shadow: var(--shadow-md);
  transform: translateY(-1px);
}

.btn-secondary {
  background: var(--tertiary-bg);
  color: var(--text-primary);
  border: 1px solid var(--border-secondary);
}

.btn-secondary:hover {
  background: var(--border-secondary);
}

.btn-success {
  background: var(--gradient-success);
  color: white;
}

.btn-warning {
  background: var(--gradient-warning);
  color: white;
}

.btn-danger {
  background: var(--gradient-danger);
  color: white;
}

.btn-sm {
  padding: var(--spacing-xs) var(--spacing-sm);
  font-size: 0.75rem;
}

.btn-lg {
  padding: var(--spacing-md) var(--spacing-lg);
  font-size: 1rem;
}

/* Dashboard Grid */
.dashboard-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: var(--spacing-lg);
  margin-bottom: var(--spacing-xl);
}

@media (min-width: 1200px) {
  .dashboard-grid {
    grid-template-columns: repeat(4, 1fr);
    gap: var(--spacing-xl);
  }
}

@media (min-width: 1536px) {
  .dashboard-grid {
    gap: var(--spacing-2xl);
  }
}

.dashboard-row {
  display: grid;
  grid-template-columns: repeat(12, 1fr);
  gap: var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
}

.col-1 { grid-column: span 1; }
.col-2 { grid-column: span 2; }
.col-3 { grid-column: span 3; }
.col-4 { grid-column: span 4; }
.col-6 { grid-column: span 6; }
.col-8 { grid-column: span 8; }
.col-12 { grid-column: span 12; }

/* Stats Cards */
.stats-card {
  background: var(--card-bg);
  border: 1px solid var(--border-primary);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  position: relative;
  overflow: hidden;
}

.stats-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: var(--gradient-primary);
}

.stats-card.success::before {
  background: var(--gradient-success);
}

.stats-card.warning::before {
  background: var(--gradient-warning);
}

.stats-card.danger::before {
  background: var(--gradient-danger);
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: var(--spacing-md);
}

.stats-icon {
  width: 48px;
  height: 48px;
  border-radius: var(--radius-lg);
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--gradient-primary);
  color: white;
}

.stats-icon.success {
  background: var(--gradient-success);
}

.stats-icon.warning {
  background: var(--gradient-warning);
}

.stats-icon.danger {
  background: var(--gradient-danger);
}

.stats-value {
  font-size: 2rem;
  font-weight: 700;
  color: var(--text-primary);
  line-height: 1;
}

.stats-label {
  color: var(--text-muted);
  font-size: 0.875rem;
  margin-top: var(--spacing-xs);
}

.stats-change {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  font-size: 0.75rem;
  margin-top: var(--spacing-sm);
}

.stats-change.positive {
  color: var(--accent-success);
}

.stats-change.negative {
  color: var(--accent-danger);
}

/* Form Styles */
.form-group {
  margin-bottom: var(--spacing-lg);
  position: relative;
}

.form-label {
  display: block;
  color: var(--text-primary);
  font-weight: 500;
  margin-bottom: var(--spacing-sm);
  font-size: 0.875rem;
  transition: all 0.3s ease;
}

.form-input {
  width: 100%;
  padding: var(--spacing-md);
  background: var(--tertiary-bg);
  border: 1px solid var(--border-primary);
  border-radius: var(--radius-md);
  color: var(--text-primary) !important;
  font-size: 0.875rem;
  transition: all 0.3s ease;
  position: relative;
}

.form-input:focus {
  outline: none;
  border-color: var(--accent-primary);
  box-shadow: 0 0 0 3px rgba(0, 139, 139, 0.15);
  background: var(--secondary-bg);
  transform: translateY(-1px);
}

.form-input:hover {
  border-color: var(--border-secondary);
  background: var(--secondary-bg);
}

.form-input::placeholder {
  color: var(--text-muted);
  transition: all 0.3s ease;
}

.form-input:focus::placeholder {
  color: var(--text-light);
  transform: translateX(4px);
}

/* Table Styles */
.table {
  width: 100%;
  border-collapse: collapse;
  background: var(--card-bg);
  border-radius: var(--radius-lg);
  overflow: hidden;
  border: 1px solid var(--border-primary);
}

.table th,
.table td {
  padding: var(--spacing-md);
  text-align: left;
  border-bottom: 1px solid var(--border-primary);
}

.table th {
  background: var(--tertiary-bg);
  color: var(--text-primary);
  font-weight: 600;
  font-size: 0.875rem;
}

.table td {
  color: var(--text-secondary);
  font-size: 0.875rem;
}

.table tr:hover {
  background: var(--tertiary-bg);
}

/* Badge Styles */
.badge {
  display: inline-flex;
  align-items: center;
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-sm);
  font-size: 0.75rem;
  font-weight: 500;
}

.badge-success {
  background: rgba(56, 142, 60, 0.1);
  color: var(--accent-success);
  border: 1px solid rgba(56, 142, 60, 0.2);
}

.badge-warning {
  background: rgba(255, 193, 7, 0.1);
  color: var(--accent-warning);
  border: 1px solid rgba(255, 193, 7, 0.2);
}

.badge-danger {
  background: rgba(211, 47, 47, 0.1);
  color: var(--accent-danger);
  border: 1px solid rgba(211, 47, 47, 0.2);
}

.badge-info {
  background: rgba(25, 118, 210, 0.1);
  color: var(--accent-info);
  border: 1px solid rgba(25, 118, 210, 0.2);
}

/* Loading and Empty States */
.loading-spinner {
  display: inline-block;
  width: 20px;
  height: 20px;
  border: 2px solid var(--border-primary);
  border-radius: 50%;
  border-top-color: var(--accent-primary);
  animation: spin 1s ease-in-out infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.empty-state {
  text-align: center;
  padding: var(--spacing-2xl);
  color: var(--text-muted);
}

/* Responsive Design */
@media (max-width: 768px) {
  .sidebar {
    transform: translateX(-100%);
  }
  
  .sidebar.open {
    transform: translateX(0);
  }
  
  .main-content {
    margin-left: 0 !important;
  }
  
  .content-wrapper {
    padding: var(--spacing-md);
  }
  
  .dashboard-grid {
    grid-template-columns: 1fr;
  }
  
  .dashboard-row {
    grid-template-columns: 1fr;
  }
  
  .col-1, .col-2, .col-3, .col-4, .col-6, .col-8, .col-12 {
    grid-column: span 1;
  }
}

/* Sidebar overlay for mobile */
.sidebar-overlay {
  display: none;
}

@media (max-width: 768px) {
  .sidebar-overlay {
    display: block;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 999;
  }
}

/* Scrollbar Styles */
::-webkit-scrollbar {
  width: 6px;
}

::-webkit-scrollbar-track {
  background: var(--secondary-bg);
}

::-webkit-scrollbar-thumb {
  background: var(--border-secondary);
  border-radius: 3px;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--border-light);
}

/* Login Page Styles */
.login-container {
  min-height: 100vh;
  width: 100vw;
  background: var(--primary-bg);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.login-card {
  background: var(--card-bg);
  border: 1px solid var(--border-primary);
  border-radius: var(--radius-xl);
  padding: var(--spacing-2xl);
  width: 100%;
  max-width: 420px;
  min-width: 320px;
  box-shadow: var(--shadow-lg);
  margin: var(--spacing-lg);
}

.login-header {
  text-align: center;
  margin-bottom: var(--spacing-2xl);
}

.login-header h1 {
  font-size: 1.875rem;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: var(--spacing-sm);
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.login-header p {
  color: var(--text-muted);
  font-size: 0.875rem;
}

.login-form {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-lg);
}

.input-with-icon {
  position: relative;
  display: flex;
  align-items: center;
}

.input-with-icon svg {
  position: absolute;
  left: var(--spacing-md);
  color: var(--text-muted);
  z-index: 2;
  transition: all 0.3s ease;
}

.input-with-icon:focus-within svg {
  color: var(--accent-primary);
  transform: scale(1.1);
}

.input-with-icon input {
  padding-left: calc(var(--spacing-md) * 2 + 20px);
  padding-right: calc(var(--spacing-md) * 2 + 20px);
  color: var(--text-primary) !important;
}

.input-with-icon input:focus {
  padding-left: calc(var(--spacing-md) * 2 + 24px);
  color: var(--text-primary) !important;
}

.toggle-password {
  position: absolute;
  right: var(--spacing-md);
  background: none;
  border: none;
  color: var(--text-muted);
  cursor: pointer;
  padding: var(--spacing-xs);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
  border-radius: var(--radius-sm);
  transition: all 0.3s ease;
}

.toggle-password:hover {
  color: var(--text-primary);
  background: rgba(102, 126, 234, 0.1);
  transform: scale(1.1);
}

.login-btn {
  width: 100%;
  padding: var(--spacing-md) var(--spacing-lg);
  font-size: 1rem;
  font-weight: 600;
  border-radius: var(--radius-md);
  margin-top: var(--spacing-md);
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  border: none;
  cursor: pointer;
}

.login-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  transition: left 0.5s ease;
}

.login-btn:hover::before {
  left: 100%;
}

.login-btn:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

.login-btn:active {
  transform: translateY(0);
  box-shadow: var(--shadow-md);
}

.login-btn.loading {
  opacity: 0.8;
  cursor: not-allowed;
  transform: none;
}

.login-btn.loading:hover {
  transform: none;
  box-shadow: var(--shadow-sm);
}

.login-btn.loading::before {
  display: none;
}

.login-btn.loading .loading-spinner {
  margin-right: var(--spacing-sm);
}

.login-btn .loading-spinner {
  width: 16px;
  height: 16px;
  border-width: 2px;
}

.error-message {
  background: rgba(239, 68, 68, 0.1);
  color: var(--accent-danger);
  border: 1px solid rgba(239, 68, 68, 0.2);
  border-radius: var(--radius-md);
  padding: var(--spacing-md);
  font-size: 0.875rem;
  text-align: center;
  animation: errorSlideIn 0.3s ease-out;
  backdrop-filter: blur(10px);
  box-shadow: var(--shadow-sm);
}

@keyframes errorSlideIn {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Input validation states */
.form-input.error {
  border-color: var(--accent-danger);
  box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.15);
  animation: inputShake 0.4s ease-in-out;
}

.form-input.success {
  border-color: var(--accent-success);
  box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.15);
}

@keyframes inputShake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-4px); }
  75% { transform: translateX(4px); }
}

.input-with-icon.error svg {
  color: var(--accent-danger);
}

.input-with-icon.success svg {
  color: var(--accent-success);
}

/* Floating Labels */
.floating-label {
  position: absolute;
  left: var(--spacing-md);
  top: 50%;
  transform: translateY(-50%);
  background: var(--card-bg);
  padding: 0 var(--spacing-xs);
  color: var(--text-muted);
  font-size: 0.875rem;
  font-weight: 400;
  transition: all 0.3s ease;
  pointer-events: none;
  z-index: 1;
  border-radius: var(--radius-sm);
}

.floating-label.with-icon {
  left: calc(var(--spacing-md) * 2 + 20px);
}

.form-group:focus-within .floating-label,
.floating-label.active {
  top: 0;
  transform: translateY(-50%);
  font-size: 0.75rem;
  color: var(--accent-primary);
  font-weight: 500;
  background: var(--card-bg);
  box-shadow: 0 0 0 2px var(--card-bg);
}

.form-group:focus-within .floating-label:not(.with-icon),
.floating-label.active:not(.with-icon) {
  left: calc(var(--spacing-md) + var(--spacing-xs));
}

.form-group:focus-within .floating-label.with-icon,
.floating-label.with-icon.active {
  left: calc(var(--spacing-md) * 2 + 20px + var(--spacing-xs));
}

.login-footer {
  text-align: center;
  margin-top: var(--spacing-xl);
}

.login-footer p {
  color: var(--text-muted);
  font-size: 0.875rem;
}

.link-button {
  background: none;
  border: none;
  color: var(--accent-primary);
  cursor: pointer;
  text-decoration: underline;
  font-size: inherit;
  margin-left: var(--spacing-xs);
}

.link-button:hover {
  color: var(--accent-secondary);
}

/* Invoice Form Specific Styles */
.invoice-form-content {
  padding: var(--spacing-lg);
}

.invoice-form .form-input {
  margin-bottom: var(--spacing-sm);
}

/* Utility Classes */
.text-center { text-align: center; }
.text-right { text-align: right; }
.text-left { text-align: left; }

.mb-0 { margin-bottom: 0; }
.mb-1 { margin-bottom: var(--spacing-sm); }
.mb-2 { margin-bottom: var(--spacing-md); }
.mb-3 { margin-bottom: var(--spacing-lg); }
.mb-4 { margin-bottom: var(--spacing-xl); }

.mt-0 { margin-top: 0; }
.mt-1 { margin-top: var(--spacing-sm); }
.mt-2 { margin-top: var(--spacing-md); }
.mt-3 { margin-top: var(--spacing-lg); }
.mt-4 { margin-top: var(--spacing-xl); }

.ml-2 { margin-left: var(--spacing-md); }

.d-flex { display: flex; }
.align-items-center { align-items: center; }
.justify-content-center { justify-content: center; }
.justify-content-between { justify-content: space-between; }
.gap-1 { gap: var(--spacing-sm); }
.gap-2 { gap: var(--spacing-md); }
.gap-3 { gap: var(--spacing-lg); }

.table-responsive {
  overflow-x: auto;
}

/* Customer Management Styles */
.customer-management {
  background: var(--primary-bg);
  min-height: 100vh;
  padding: var(--spacing-lg);
}

.page-header {
  margin-bottom: var(--spacing-xl);
  padding: var(--spacing-lg) 0;
  border-bottom: 1px solid var(--border-primary);
}

.header-content h1 {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  color: var(--text-primary);
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: var(--spacing-sm);
}

.header-content p {
  color: var(--text-muted);
  font-size: 1rem;
}

/* Tab Navigation */
.tab-navigation {
  display: flex;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-xl);
  border-bottom: 1px solid var(--border-primary);
}

.tab-btn {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  padding: var(--spacing-md) var(--spacing-lg);
  background: none;
  border: none;
  color: var(--text-muted);
  font-size: 0.875rem;
  font-weight: 500;
  cursor: pointer;
  border-radius: var(--radius-md) var(--radius-md) 0 0;
  transition: all 0.3s ease;
  position: relative;
  border-bottom: 2px solid transparent;
}

.tab-btn:hover {
  color: var(--text-primary);
  background: var(--tertiary-bg);
}

.tab-btn.active {
  color: var(--accent-primary);
  background: var(--tertiary-bg);
  border-bottom-color: var(--accent-primary);
}

/* Customer Profiles */
.customer-profiles {
  background: var(--card-bg);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  border: 1px solid var(--border-primary);
}

.profiles-header {
  margin-bottom: var(--spacing-lg);
}

.profiles-controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: var(--spacing-lg);
}

.search-filter-group {
  display: flex;
  gap: var(--spacing-md);
  align-items: center;
}

.search-box {
  position: relative;
  display: flex;
  align-items: center;
  min-width: 300px;
}

.search-box svg {
  position: absolute;
  left: var(--spacing-md);
  color: var(--text-muted);
  z-index: 1;
}

.search-box input {
  width: 100%;
  padding: var(--spacing-md) var(--spacing-md) var(--spacing-md) calc(var(--spacing-md) * 2 + 20px);
  background: var(--tertiary-bg);
  border: 1px solid var(--border-primary);
  border-radius: var(--radius-md);
  color: var(--text-primary) !important;
  font-size: 0.875rem;
  transition: all 0.3s ease;
}

.search-box input:focus {
  outline: none;
  border-color: var(--accent-primary);
  box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.15);
  background: var(--secondary-bg);
}

.filter-select {
  padding: var(--spacing-md);
  background: var(--tertiary-bg);
  border: 1px solid var(--border-primary);
  border-radius: var(--radius-md);
  color: var(--text-primary);
  font-size: 0.875rem;
  cursor: pointer;
  transition: all 0.3s ease;
}

.filter-select:focus {
  outline: none;
  border-color: var(--accent-primary);
  box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.15);
}

/* Customer Grid */
.customers-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
  gap: var(--spacing-lg);
}

.customer-card {
  background: var(--tertiary-bg);
  border: 1px solid var(--border-primary);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.customer-card:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-lg);
  border-color: var(--border-secondary);
}

.customer-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: var(--spacing-lg);
}

.customer-info h3 {
  color: var(--text-primary);
  font-size: 1.25rem;
  font-weight: 600;
  margin-bottom: var(--spacing-xs);
}

.customer-info .company {
  color: var(--text-secondary);
  font-size: 0.875rem;
  margin-bottom: var(--spacing-sm);
}

.status-badge {
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-sm);
  font-size: 0.75rem;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.status-active {
  background: rgba(16, 185, 129, 0.1);
  color: var(--accent-success);
  border: 1px solid rgba(16, 185, 129, 0.2);
}

.status-inactive {
  background: rgba(156, 163, 175, 0.1);
  color: var(--text-muted);
  border: 1px solid rgba(156, 163, 175, 0.2);
}

.customer-actions {
  display: flex;
  gap: var(--spacing-xs);
}

.btn-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  background: var(--secondary-bg);
  border: 1px solid var(--border-primary);
  border-radius: var(--radius-md);
  color: var(--text-muted);
  cursor: pointer;
  transition: all 0.3s ease;
}

.btn-icon:hover {
  background: var(--accent-primary);
  color: white;
  transform: scale(1.1);
}

.btn-icon.btn-danger:hover {
  background: var(--accent-danger);
}

/* Customer Details */
.customer-details {
  margin-bottom: var(--spacing-lg);
}

.detail-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-sm);
  color: var(--text-secondary);
  font-size: 0.875rem;
}

.detail-item svg {
  color: var(--text-muted);
  flex-shrink: 0;
}

/* Credit Info */
.credit-info {
  border-top: 1px solid var(--border-primary);
  padding-top: var(--spacing-md);
}

.credit-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-sm);
}

.credit-label {
  color: var(--text-muted);
  font-size: 0.875rem;
}

.credit-value {
  color: var(--text-primary);
  font-weight: 600;
  font-size: 0.875rem;
}

.credit-utilization {
  margin-top: var(--spacing-md);
}

.utilization-bar {
  width: 100%;
  height: 8px;
  background: var(--secondary-bg);
  border-radius: var(--radius-sm);
  overflow: hidden;
  margin-bottom: var(--spacing-xs);
}

.utilization-fill {
  height: 100%;
  background: var(--gradient-primary);
  border-radius: var(--radius-sm);
  transition: width 0.3s ease;
}

.utilization-text {
  font-size: 0.75rem;
  color: var(--text-muted);
}

/* Analytics */
.customer-analytics {
  background: var(--card-bg);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  border: 1px solid var(--border-primary);
}

.analytics-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: var(--spacing-lg);
  margin-bottom: var(--spacing-xl);
}

.analytics-card {
  background: var(--tertiary-bg);
  border: 1px solid var(--border-primary);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  transition: all 0.3s ease;
}

.analytics-card:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
}

.analytics-card .card-header {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-md);
}

.analytics-card .card-header svg {
  color: var(--accent-primary);
}

.analytics-card .card-header h3 {
  color: var(--text-primary);
  font-size: 1rem;
  font-weight: 600;
}

.analytics-card .card-value {
  font-size: 2rem;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: var(--spacing-sm);
}

.analytics-card .card-subtitle {
  color: var(--text-muted);
  font-size: 0.875rem;
}

/* Charts */
.analytics-charts {
  margin-top: var(--spacing-xl);
}

.chart-card {
  background: var(--tertiary-bg);
  border: 1px solid var(--border-primary);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
}

.chart-card h3 {
  color: var(--text-primary);
  font-size: 1.125rem;
  font-weight: 600;
  margin-bottom: var(--spacing-lg);
}

.utilization-row {
  display: flex;
  align-items: center;
  gap: var(--spacing-lg);
  margin-bottom: var(--spacing-md);
  padding: var(--spacing-sm);
  border-radius: var(--radius-md);
  transition: background 0.3s ease;
}

.utilization-row:hover {
  background: var(--secondary-bg);
}

.customer-name {
  min-width: 150px;
  font-weight: 500;
  color: var(--text-primary);
  font-size: 0.875rem;
}

.utilization-visual {
  flex: 1;
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
}

.utilization-bar-large {
  flex: 1;
  height: 12px;
  background: var(--secondary-bg);
  border-radius: var(--radius-sm);
  overflow: hidden;
}

.utilization-percentage {
  min-width: 40px;
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--text-secondary);
  text-align: right;
}

/* Modal Styles */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: var(--spacing-lg);
  backdrop-filter: blur(4px);
}

.modal {
  background: var(--card-bg);
  border: 1px solid var(--border-primary);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-xl);
  width: 100%;
  max-width: 600px;
  max-height: 90vh;
  overflow: hidden;
  animation: modalSlideIn 0.3s ease-out;
}

.modal.large-modal {
  max-width: 800px;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translateY(-20px) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-lg);
  border-bottom: 1px solid var(--border-primary);
  background: var(--tertiary-bg);
}

.modal-header h2 {
  color: var(--text-primary);
  font-size: 1.25rem;
  font-weight: 600;
  margin: 0;
}

.modal-content {
  padding: var(--spacing-lg);
  overflow-y: auto;
  max-height: calc(90vh - 140px);
}

.modal-footer {
  display: flex;
  justify-content: flex-end;
  gap: var(--spacing-md);
  padding: var(--spacing-lg);
  border-top: 1px solid var(--border-primary);
  background: var(--tertiary-bg);
}

/* Form Grid */
.form-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: var(--spacing-lg);
}

.form-group.full-width {
  grid-column: 1 / -1;
}

.form-group label {
  display: block;
  color: var(--text-primary);
  font-weight: 500;
  margin-bottom: var(--spacing-sm);
  font-size: 0.875rem;
}

.form-group input,
.form-group select,
.form-group textarea {
  width: 100%;
  padding: var(--spacing-md);
  background: var(--tertiary-bg);
  border: 1px solid var(--border-primary);
  border-radius: var(--radius-md);
  color: var(--text-primary) !important;
  font-size: 0.875rem;
  transition: all 0.3s ease;
}

.form-group input:focus,
.form-group select:focus,
.form-group textarea:focus {
  outline: none;
  border-color: var(--accent-primary);
  box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.15);
  background: var(--secondary-bg);
}

.form-group textarea {
  resize: vertical;
  min-height: 80px;
}

/* Contact History */
.contact-history-section {
  margin-bottom: var(--spacing-xl);
  padding-bottom: var(--spacing-lg);
  border-bottom: 1px solid var(--border-primary);
}

.contact-history-section h3 {
  color: var(--text-primary);
  font-size: 1.125rem;
  font-weight: 600;
  margin-bottom: var(--spacing-lg);
}

.contact-history-list h3 {
  color: var(--text-primary);
  font-size: 1.125rem;
  font-weight: 600;
  margin-bottom: var(--spacing-lg);
}

.history-items {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.history-item {
  background: var(--tertiary-bg);
  border: 1px solid var(--border-primary);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  transition: all 0.3s ease;
}

.history-item:hover {
  background: var(--secondary-bg);
  border-color: var(--border-secondary);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-sm);
}

.contact-type {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  color: var(--accent-primary);
  font-weight: 500;
  font-size: 0.875rem;
}

.contact-date {
  color: var(--text-muted);
  font-size: 0.875rem;
}

.history-item h4 {
  color: var(--text-primary);
  font-size: 1rem;
  font-weight: 600;
  margin-bottom: var(--spacing-sm);
}

.history-item p {
  color: var(--text-secondary);
  font-size: 0.875rem;
  line-height: 1.5;
}

/* Loading and Error States */
.loading-container,
.error-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: var(--spacing-xl);
  margin: var(--spacing-lg) 0;
}

.loading-container .loading-spinner {
  color: var(--text-muted);
}

.error-container .error-message {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  background: rgba(239, 68, 68, 0.1);
  color: var(--accent-danger);
  border: 1px solid rgba(239, 68, 68, 0.2);
  border-radius: var(--radius-md);
  padding: var(--spacing-lg);
}

.btn-link {
  background: none;
  border: none;
  color: var(--accent-primary);
  cursor: pointer;
  text-decoration: underline;
  font-size: inherit;
  margin-left: var(--spacing-sm);
}

.btn-link:hover {
  color: var(--accent-secondary);
}

/* Responsive Design for Customer Management */
@media (max-width: 768px) {
  .customer-management {
    padding: var(--spacing-md);
  }
  
  .profiles-controls {
    flex-direction: column;
    gap: var(--spacing-md);
  }
  
  .search-filter-group {
    width: 100%;
    flex-direction: column;
  }
  
  .search-box {
    min-width: auto;
    width: 100%;
  }
  
  .customers-grid {
    grid-template-columns: 1fr;
  }
  
  .analytics-grid {
    grid-template-columns: 1fr;
  }
  
  .form-grid {
    grid-template-columns: 1fr;
  }
  
  .modal {
    margin: var(--spacing-md);
    max-width: calc(100vw - 2rem);
  }
  
  .utilization-row {
    flex-direction: column;
    align-items: flex-start;
    gap: var(--spacing-sm);
  }
  
  .customer-name {
    min-width: auto;
  }
}

/* Enhanced Top Navigation */
.top-navbar {
  background: var(--navbar-bg);
  border-bottom: 1px solid var(--border-primary);
  padding: var(--spacing-md) var(--spacing-xl);
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: sticky;
  top: 0;
  z-index: 1100;
  backdrop-filter: blur(10px);
  box-shadow: var(--shadow-sm);
  transition: all 0.3s ease;
}

.mobile-menu-toggle {
  display: none;
  background: none;
  border: none;
  color: var(--text-primary);
  cursor: pointer;
  padding: var(--spacing-sm);
  border-radius: var(--radius-md);
  transition: all 0.3s ease;
}

.mobile-menu-toggle:hover {
  background: var(--tertiary-bg);
  transform: scale(1.1);
}

.navbar-title-section {
  display: flex;
  flex-direction: column;
  margin-left: var(--spacing-md);
}

.navbar-title {
  font-size: 1.5rem;
  font-weight: 600;
  color: var(--text-primary);
  margin: 0;
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.navbar-subtitle {
  font-size: 0.75rem;
  color: var(--text-muted);
  margin-top: -2px;
}

/* Search */
.navbar-center {
  flex: 1;
  display: flex;
  justify-content: center;
  margin: 0 var(--spacing-xl);
}

.search-container {
  position: relative;
  display: flex;
  align-items: center;
  max-width: 500px;
  width: 100%;
}

.search-icon {
  position: absolute;
  left: var(--spacing-md);
  color: var(--text-muted);
  z-index: 2;
  transition: all 0.3s ease;
}

.search-input {
  width: 100%;
  padding: var(--spacing-md) var(--spacing-md) var(--spacing-md) calc(var(--spacing-md) * 2 + 20px);
  background: var(--tertiary-bg);
  border: 1px solid var(--border-primary);
  border-radius: var(--radius-lg);
  color: var(--text-primary) !important;
  font-size: 0.875rem;
  transition: all 0.3s ease;
}

.search-input:focus {
  outline: none;
  border-color: var(--accent-primary);
  box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.15);
  background: var(--secondary-bg);
  transform: translateY(-1px);
}

.search-container:focus-within .search-icon {
  color: var(--accent-primary);
  transform: scale(1.1);
}

.search-input::placeholder {
  color: var(--text-muted);
}

/* Notifications */
.notification-dropdown {
  position: relative;
  margin-right: var(--spacing-md);
}

.notification-btn {
  position: relative;
  background: none;
  border: none;
  color: var(--text-secondary);
  cursor: pointer;
  padding: var(--spacing-sm);
  border-radius: var(--radius-md);
  transition: all 0.3s ease;
}

.notification-btn:hover {
  background: var(--tertiary-bg);
  color: var(--text-primary);
  transform: scale(1.1);
}

.notification-badge {
  position: absolute;
  top: 2px;
  right: 2px;
  background: var(--accent-danger);
  color: white;
  font-size: 0.675rem;
  font-weight: 600;
  padding: 2px 6px;
  border-radius: 10px;
  min-width: 18px;
  height: 18px;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: notificationPulse 2s infinite;
}

@keyframes notificationPulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

/* Profile */
.profile-dropdown {
  position: relative;
}

.profile-btn {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  background: none;
  border: none;
  cursor: pointer;
  padding: var(--spacing-sm);
  border-radius: var(--radius-md);
  transition: all 0.3s ease;
  color: var(--text-primary);
}

.profile-btn:hover {
  background: var(--tertiary-bg);
  transform: translateY(-1px);
}

.user-avatar {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  background: var(--gradient-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: 600;
  font-size: 0.875rem;
  box-shadow: var(--shadow-sm);
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-right: var(--spacing-xs);
}

.user-name {
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--text-primary);
  line-height: 1.2;
}

.user-role {
  font-size: 0.75rem;
  color: var(--text-muted);
  line-height: 1;
}

.dropdown-arrow {
  transition: transform 0.3s ease;
  color: var(--text-muted);
}

.dropdown-arrow.open {
  transform: rotate(180deg);
}

/* Dropdown Menus */
.dropdown-menu {
  position: absolute;
  top: calc(100% + var(--spacing-sm));
  right: 0;
  background: var(--card-bg);
  border: 1px solid var(--border-primary);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-lg);
  padding: var(--spacing-sm);
  min-width: 280px;
  z-index: 1000;
  animation: dropdownSlideIn 0.2s ease-out;
  backdrop-filter: blur(10px);
}

@keyframes dropdownSlideIn {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.dropdown-header {
  padding: var(--spacing-md);
  border-bottom: 1px solid var(--border-primary);
  margin-bottom: var(--spacing-sm);
}

.dropdown-header h4 {
  color: var(--text-primary);
  font-size: 1rem;
  font-weight: 600;
  margin: 0 0 var(--spacing-xs) 0;
}

.user-avatar-large {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  background: var(--gradient-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: 700;
  font-size: 1.125rem;
  margin-bottom: var(--spacing-sm);
  box-shadow: var(--shadow-md);
}

.user-details h4 {
  color: var(--text-primary);
  font-size: 1rem;
  font-weight: 600;
  margin: 0 0 var(--spacing-xs) 0;
}

.user-details p {
  color: var(--text-secondary);
  font-size: 0.875rem;
  margin: 0 0 var(--spacing-xs) 0;
}

.user-role-badge {
  background: rgba(102, 126, 234, 0.1);
  color: var(--accent-primary);
  font-size: 0.75rem;
  font-weight: 500;
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-sm);
  border: 1px solid rgba(102, 126, 234, 0.2);
}

.dropdown-divider {
  height: 1px;
  background: var(--border-primary);
  margin: var(--spacing-sm) 0;
}

.dropdown-items {
  padding: var(--spacing-xs) 0;
}

.dropdown-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  padding: var(--spacing-sm) var(--spacing-md);
  color: var(--text-secondary);
  text-decoration: none;
  border-radius: var(--radius-md);
  transition: all 0.3s ease;
  font-size: 0.875rem;
  border: none;
  background: none;
  width: 100%;
  cursor: pointer;
}

.dropdown-item:hover {
  background: var(--tertiary-bg);
  color: var(--text-primary);
  transform: translateX(4px);
}

.logout-item {
  color: var(--accent-danger);
  margin-top: var(--spacing-xs);
}

.logout-item:hover {
  background: rgba(239, 68, 68, 0.1);
  color: var(--accent-danger);
}

/* Notification Menu */
.notification-menu {
  min-width: 360px;
}

.notification-list {
  max-height: 400px;
  overflow-y: auto;
}

.notification-item {
  position: relative;
  padding: var(--spacing-md);
  border-radius: var(--radius-md);
  margin-bottom: var(--spacing-xs);
  transition: all 0.3s ease;
  cursor: pointer;
}

.notification-item:hover {
  background: var(--tertiary-bg);
}

.notification-item.unread {
  background: rgba(102, 126, 234, 0.05);
  border-left: 3px solid var(--accent-primary);
}

.notification-content h5 {
  color: var(--text-primary);
  font-size: 0.875rem;
  font-weight: 600;
  margin: 0 0 var(--spacing-xs) 0;
}

.notification-content p {
  color: var(--text-secondary);
  font-size: 0.8rem;
  margin: 0 0 var(--spacing-xs) 0;
  line-height: 1.4;
}

.notification-time {
  color: var(--text-muted);
  font-size: 0.75rem;
}

.unread-indicator {
  position: absolute;
  top: var(--spacing-md);
  right: var(--spacing-md);
  width: 8px;
  height: 8px;
  background: var(--accent-primary);
  border-radius: 50%;
}

.dropdown-footer {
  padding: var(--spacing-sm) var(--spacing-md);
  border-top: 1px solid var(--border-primary);
  margin-top: var(--spacing-sm);
  text-align: center;
}

.view-all-link {
  color: var(--accent-primary);
  text-decoration: none;
  font-size: 0.875rem;
  font-weight: 500;
  transition: color 0.3s ease;
}

.view-all-link:hover {
  color: var(--accent-secondary);
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .mobile-menu-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .navbar-center {
    display: none;
  }
  
  .navbar-title {
    font-size: 1.25rem;
  }
  
  .navbar-subtitle {
    display: none;
  }
  
  .navbar-title-section {
    margin-left: var(--spacing-sm);
  }
  
  .user-info {
    display: none;
  }
  
  .dropdown-menu {
    min-width: 260px;
  }
  
  .notification-menu {
    min-width: 320px;
  }
}