.settings-header h3 {
  margin: 0;
  color: #1e293b;
  font-size: 1.5rem;
}

/* Profile Settings */
.profile-settings {
  max-width: 1200px;
}

.profile-form {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.logo-section {
  background: #f8fafc;
  padding: 1.5rem;
  border-radius: 8px;
  border: 1px solid #e2e8f0;
}

.logo-section h4 {
  margin: 0 0 1rem 0;
  color: #1e293b;
}

.logo-upload {
  display: flex;
  align-items: center;
  gap: 1.5rem;
}

.logo-preview {
  width: 120px;
  height: 120px;
  border: 2px dashed #d1d5db;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  background: #f9fafb;
}

.logo-preview img {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.logo-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.5rem;
  color: #9ca3af;
  text-align: center;
}

.form-section {
  background: white;
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  padding: 1.5rem;
}

.form-section h4 {
  margin: 0 0 1.5rem 0;
  color: #1e293b;
  font-size: 1.1rem;
  padding-bottom: 0.75rem;
  border-bottom: 1px solid #f1f5f9;
}

/* Invoice Templates */
.invoice-templates {
  max-width: 1400px;
}

.template-settings {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.template-styles {
  background: white;
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  padding: 1.5rem;
}

.template-styles h4 {
  margin: 0 0 1.5rem 0;
  color: #1e293b;
}

.styles-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1rem;
}

.style-card {
  border: 2px solid #e2e8f0;
  border-radius: 8px;
  padding: 1rem;
  cursor: pointer;
  transition: all 0.2s;
  position: relative;
  background: white;
}

.style-card:hover {
  border-color: #2563eb;
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(37, 99, 235, 0.15);
}

.style-card.selected {
  border-color: #2563eb;
  background: #eff6ff;
}

.style-preview {
  height: 100px;
  border: 1px solid #e2e8f0;
  border-radius: 4px;
  margin-bottom: 0.75rem;
  overflow: hidden;
  background: white;
}

.preview-content {
  padding: 0.5rem;
  height: 100%;
}

.preview-header {
  height: 20px;
  border-radius: 2px;
  margin-bottom: 0.5rem;
}

.preview-body {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.preview-line {
  height: 4px;
  background: #e5e7eb;
  border-radius: 2px;
}

.preview-line.short {
  width: 60%;
}

.style-info {
  text-align: center;
}

.style-info h5 {
  margin: 0 0 0.25rem 0;
  color: #1e293b;
  font-size: 0.9rem;
}

.style-info p {
  margin: 0;
  color: #64748b;
  font-size: 0.75rem;
}

.style-selected {
  position: absolute;
  top: 0.5rem;
  right: 0.5rem;
  color: #2563eb;
}

.customization-options {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.option-section {
  background: white;
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  padding: 1.5rem;
}

.option-section h4 {
  margin: 0 0 1rem 0;
  color: #1e293b;
}

.color-input {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.color-input input[type="color"] {
  width: 50px;
  height: 40px;
  border: none;
  border-radius: 6px;
  cursor: pointer;
}

.color-input span {
  font-family: monospace;
  color: #64748b;
  font-size: 0.875rem;
}

.checkbox-group {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.checkbox-item {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  cursor: pointer;
  font-size: 0.875rem;
  color: #374151;
}

.checkbox-item input[type="checkbox"] {
  width: 16px;
  height: 16px;
  accent-color: #2563eb;
}

/* Tax Settings */
.tax-settings {
  max-width: 1000px;
}

.tax-list {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.tax-card {
  background: white;
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  padding: 1.5rem;
  transition: all 0.2s;
}

.tax-card.active {
  border-color: #22c55e;
  background: #f0fdf4;
}

.tax-card.inactive {
  border-color: #ef4444;
  background: #fef2f2;
  opacity: 0.7;
}

.tax-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 1rem;
}

.tax-info h4 {
  margin: 0 0 0.25rem 0;
  color: #1e293b;
  font-size: 1.1rem;
}

.tax-description {
  margin: 0;
  color: #64748b;
  font-size: 0.875rem;
}

.tax-actions {
  display: flex;
  gap: 0.5rem;
}

.tax-details {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.tax-rate {
  display: flex;
  align-items: baseline;
  gap: 0.5rem;
}

.rate-value {
  font-size: 1.5rem;
  font-weight: 700;
  color: #2563eb;
}

.rate-type {
  font-size: 0.875rem;
  color: #64748b;
}

/* User Management */
.user-management {
  max-width: 1200px;
}

.users-list {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.user-card {
  background: white;
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  padding: 1.5rem;
  transition: all 0.2s;
}

.user-card.active {
  border-color: #22c55e;
}

.user-card.inactive {
  border-color: #ef4444;
  opacity: 0.7;
}

.user-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.user-avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background: #2563eb;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  font-size: 1.25rem;
}

.user-details h4 {
  margin: 0 0 0.25rem 0;
  color: #1e293b;
}

.user-details p {
  margin: 0 0 0.5rem 0;
  color: #64748b;
  font-size: 0.875rem;
}

.role-badge {
  padding: 2px 8px;
  border-radius: 12px;
  font-size: 0.75rem;
  font-weight: 500;
}

.role-badge.admin {
  background: #fef3c7;
  color: #92400e;
}

.role-badge.manager {
  background: #dbeafe;
  color: #1e40af;
}

.role-badge.user {
  background: #d1fae5;
  color: #065f46;
}

.role-badge.viewer {
  background: #f3f4f6;
  color: #374151;
}

.user-actions {
  display: flex;
  gap: 0.5rem;
}

.user-stats {
  display: flex;
  gap: 2rem;
  margin-bottom: 1rem;
  padding: 1rem;
  background: #f8fafc;
  border-radius: 6px;
}

.stat-item {
  display: flex;
  flex-direction: column;
}

.stat-label {
  font-size: 0.75rem;
  color: #64748b;
  margin-bottom: 0.25rem;
}

.stat-value {
  font-weight: 500;
  color: #1e293b;
  font-size: 0.875rem;
}

.user-permissions {
  margin-top: 1rem;
}

.user-permissions h5 {
  margin: 0 0 0.75rem 0;
  color: #1e293b;
  font-size: 0.9rem;
}

.permissions-grid {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.permission-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0.5rem;
  background: #f9fafb;
  border-radius: 4px;
}

.permission-module {
  font-size: 0.875rem;
  color: #374151;
  font-weight: 500;
}

.permission-actions {
  display: flex;
  gap: 0.25rem;
}

.permission-tag {
  width: 20px;
  height: 20px;
  border-radius: 3px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 0.7rem;
  font-weight: 600;
}

.permission-tag.allowed {
  background: #d1fae5;
  color: #065f46;
}

.permission-tag.denied {
  background: #fee2e2;
  color: #991b1b;
}

.permissions-section {
  margin-top: 1.5rem;
  padding-top: 1.5rem;
  border-top: 1px solid #e2e8f0;
}

.permissions-section h4 {
  margin: 0 0 1rem 0;
  color: #1e293b;
}

.permissions-matrix {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.permission-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0.75rem;
  background: #f8fafc;
  border-radius: 6px;
  border: 1px solid #e2e8f0;
}

.permission-row .permission-module {
  font-weight: 500;
  color: #1e293b;
  min-width: 120px;
}

.permission-checkboxes {
  display: flex;
  gap: 1rem;
}

.permission-checkbox {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  cursor: pointer;
  font-size: 0.875rem;
  color: #374151;
}

.permission-checkbox input[type="checkbox"] {
  width: 16px;
  height: 16px;
  accent-color: #2563eb;
}

.password-input {
  position: relative;
  display: flex;
  align-items: center;
}

.password-input input {
  padding-right: 40px;
}

.password-input .btn-icon {
  position: absolute;
  right: 8px;
  background: none;
  border: none;
  color: #64748b;
  cursor: pointer;
  padding: 4px;
  border-radius: 4px;
}

.password-input .btn-icon:hover {
  background: #f1f5f9;
  color: #374151;
}

/* Mobile Responsive for Company Settings */
@media (max-width: 1024px) {
  .styles-grid {
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  }

  .user-header {
    flex-direction: column;
    align-items: stretch;
    gap: 1rem;
  }

  .user-actions {
    align-self: flex-end;
  }
}

@media (max-width: 768px) {
  .settings-header {
    flex-direction: column;
    align-items: stretch;
    gap: 1rem;
  }

  .logo-upload {
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .styles-grid {
    grid-template-columns: 1fr;
  }

  .user-info {
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 0.75rem;
  }

  .user-stats {
    flex-direction: column;
    gap: 0.75rem;
  }

  .permission-row {
    flex-direction: column;
    align-items: stretch;
    gap: 0.75rem;
  }

  .permission-checkboxes {
    justify-content: space-around;
  }

  .tax-header {
    flex-direction: column;
    gap: 1rem;
  }

  .tax-actions {
    align-self: flex-end;
  }
}
